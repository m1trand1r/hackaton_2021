extends ../../commonViews/layout

block content
    #content.vh-100.d-flex.justify-content-center.align-items-center
        form.container-fluid.mb-5(action="/login", method="post")
            h1.form-header.row.justify-content-center.mb-2.mb-md-5.font_color Вход
            p.registration-form-el.row.justify-content-center
                input.registration-input.col-6.col-sm-4.col-lg-3.custom_input(type="text", name="email", placeholder="Адрес электронной почты", required)
            p.registration-form-el.row.justify-content-center
                input.registration-input.col-6.col-sm-4.col-lg-3.custom_input(type="password", name="password", placeholder="Пароль", required)
            p.registration-form-el.row.justify-content-center
                input.registration-input.col-6.col-sm-4.col-lg-3.submit_btn(type="submit", value="Войти")